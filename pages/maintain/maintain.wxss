  color: black;
}
.input{
  width: 622rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  
}
.bad_title{
  font-size: 28rpx;
  color: #333;
  text-align: center;
  /* background-color: pink; */
  margin-bottom: 20rpx;
}
.bad_image_box{
  width: 702rpx;
  height: 426rpx;
  box-sizing: border-box;
  margin: 20rpx 0 40rpx 0;
  background-color: #fff;
}
.other_bad{
  width: 702rpx;
  height: 196rpx;
  box-sizing: border-box;
  margin: 20rpx 0 40rpx 0;
  background-color: #fff;
