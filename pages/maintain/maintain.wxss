.main{
  width: 100%;
  height: 1500rpx;
  background-color: #f3f3f3;
  box-sizing: border-box;
  padding: 20rpx 24rpx 0 24rpx;
}
.item{
  display:inline-block;
  width:346rpx;
  height:100rpx;
  border-radius:8rpx;
}
