<form bindsubmit="formSubmit" bindreset="formReset">
  <view class="shopApply">
    <!-- 真实姓名： -->
    <view class='input' style="margin-top:40rpx">
      <label>真实姓名：</label>
      <input style="width:70%" 
             focus='true' 
             name="name" 
             maxlength="50" 
             placeholder="请输入真实姓名" />
    </view>
    <!-- 身份证号： -->
    <view class='input'>
      <label>身份证号：</label>
      <input type="idcard" 
             style="width:70%" 
             name="idNO" 
             maxlength="18" 
             placeholder="请输入真实的身份证号码" />
    </view>
    <button class="authentication" formType="submit">立即认证 </button>
  </view>
</form>