<form bindsubmit="formSubmit" bindreset="formReset">
  <view class="shopApply">
    <view class='input' style="margin-top:40rpx">
      <label style="flex:2;padding-left: 20rpx;">姓名</label>
      <input style="flex:5" focus='true'  name="name" maxlength="50" placeholder="请输入真实姓名" />
    </view>
    <view class='input'>
      <label style="flex:2;padding-left: 20rpx;">学号</label>
      <input style="flex:5" type="idcard" name="studentNO" maxlength="50" placeholder="请输入学生证号" />
    </view>
    <view class="textArea">
      <label style="flex:2;padding-left: 20rpx;">申请理由</label>
      <textarea style="flex:5" maxlength="30" auto-height="true" name="reason" placeholder="请输入申请理由(选填)" />
    </view>
  
    <view style="background:#fff;width:100%;margin:20rpx;">
      <view style="margin:30rpx;">
        <image bindtap="upImg"  mode="aspectFill" src='{{studentAuthImg}}' style='width:132rpx;height:132rpx;'></image>
        <view class="delete-btn">学生证图片</view>
      </view>
    </view>

    <view>
      <checkbox-group name="agreement">
        <label class="checkbox" >
          <checkbox value="agreement"  />
          请勾选并仔细阅读
          <text catchtap="toAgreement" style="text-decoration: underline;color:#52926c;">《共享车辆租赁服务协议书》</text>
        </label> 
      </checkbox-group> 
    </view>

    <button type="primary" formType="submit" style="margin-top:30px;width:85%">立即申请</button>
  </view>
</form>