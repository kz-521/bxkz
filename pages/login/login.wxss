  justify-content: center;
  flex-wrap: wrap;
  align-items: center;
  align-content: center;
}

.login-button{
  color: #f0f0f0;
  background-color: #3fd572;
  border-radius: 50rpx;
  font-size: 36rpx;
}
.default{
  background-color:#3fd572;
  color:#fff;
}
.phone-input{
  width: 100%;
  margin-left: 20rpx
}
.wx-login{
  margin-top: 15%;
}
