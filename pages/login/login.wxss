}

.bg image {
  width: 100%;
  height: 334rpx;
  margin-bottom: 20px;
}

.inputView {
  width: 70%;
  margin: 0% auto;
  font-size: 30rpx;
}

.phone {
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  align-content: center;
   border-bottom: 1px solid rgb(220, 220, 220);
   z-index: 9999;
}

.yzm{
  font-size: 26rpx;
}
.yzm1{
  z-index: -1;
}


input {
  width: 300rpx;
}

.phone text {
  width: 150rpx;
}

.authCode text:first-child {
  width: 150rpx;
}

text {
  line-height: 50rpx;
}

.authCode text:last-child {
  color: #3cc51f;
  width: 250rpx;
  text-align: center;
}


.submit {
  margin: 20px 15px;
}

.login-check{
