  text-align: center;
  color: #423535;
}

.login-check>view:first-child{
  flex: 1;
  margin-top: 20rpx;
}

.btn-group{
  display: flex;
  flex-direction: column;
}
.btn-group>button{
  flex: 1;
}
.btn-group>button:first-child{
  width: 100%
}
.btn-group>button:last-child{
