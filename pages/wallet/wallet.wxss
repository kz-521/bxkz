.wallet{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 40rpx 24rpx 0 24rpx;
  background-color: #f8f8f8;
}
.detail{
  background-color: #fff;
  box-sizing: border-box;
  border-radius:16rpx;
  margin: 40rpx 0;
}
.detail_item{
  box-sizing: border-box;
  border-radius:16rpx 16rpx 0 0 ;
  border-bottom: 2rpx solid rgba(233, 233, 233,0.5);
  height:90rpx;
  padding: 0 32rpx;
  display: flex;
  justify-content:space-between;
  align-items:center;
  align-content: center;
  background-color: #fff;
}
.first{
  border-radius:15rpx 15rpx 0 0 ;
}
.last{
  border-radius: 0 0 15rpx 15rpx ;
}
.detail_text{
  font-size: 28rpx;
}

.wallet-header{
  box-sizing: border-box;
  height: 392rpx;
  background-color: #3fd572;
  border-radius:16rpx;
  margin: 0 0  40rpx  0;
}
.wallet_can{
  height: 218rpx;
  border-bottom: 1rpx solid #fff;
}
.wallet_remain{
  height: 172rpx;
  box-sizing: border-box;
  padding: 0 40rpx;
  display: flex;
}

.reamin_left{
  box-sizing: border-box;
  padding: 32rpx 0;
  height: 100%;
  width: 50%;
  font-size: 26rpx;
  display: flex;
  flex-direction: column;
  justify-content:space-around;
}
.wallet_can_text{
  font-size: 28rpx;
  box-sizing: border-box;
  padding: 0 40rpx;
  height: 50%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  align-content: center;
}
.can_text{
  color: #fff;
}
.remain_text{
  color: #fff;
  font-size: 28rpx;
}

.remain_num{
  color: #fff;
  font-size: 32rpx;
}

.wallet_button{
  font-size: 36rpx;
  color: #3fd572;
  width: 220rpx;
  height: 80rpx;
  line-height: 78rpx;
  background: #FFFFFF;
  border-radius: 50rpx;
}
.wallet_can_num{
  color: #fff;
  font-size: 60rpx;
  box-sizing: border-box;
  padding: 0 40rpx;
  height: 50%;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  /* background-color: red; */
}

.wallet-fixed{
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, .5);
  /* background-color: #fff; */
  bottom: 0;
  left: 0;
  z-index: 999;
}

.card_bottom{
  display: flex;
  flex-direction: column;
  align-content: center;
  align-items: center;
}
.wallet-input{
  box-sizing: border-box;
  position: fixed;
  bottom:0;
  left:0;
  transform: translate(-50%,-50%);
  width: 568rpx;
  height: 764rpx;
  background: #FFFFFF;
  border-radius: 28rpx;
  overflow: hidden;
}

.page-mask{
  position: fixed;
  height: 100%;
  width: 100%;
  left: 0;
  top: 0;
  background-color: rgba(0,0,0,.5);
  z-index: 10;
}

.fixed{
  text-align: center;
  padding: 20rpx 0;
  margin: 30rpx auto;
  width: 90%;
  transition: all 200ms linear
}

.wallet-input input{
  border-bottom: 2rpx solid #a0a0a0;
}
.wallet_button1{
  background-color:#fff;
  text-align:center;
  height: 80rpx;
  line-height:80rpx;
  border-radius:50rpx;
  margin: 30rpx auto;
  width: 90%;
  transition: all 200ms linear
}
