label text{
  margin-left:25rpx;
}
.balance_box{
  box-sizing: border-box;
  padding-bottom: 5%;
  width: 702rpx;
  /* height: 408rpx; */
  /* background-color: #fff; */
  background-color: #fff;
  border-radius: 16rpx;
}

.balance_title{
  /* background-color: red; */
  box-sizing: border-box;
  padding: 22rpx 0 0 30rpx;
  width: 100%;
  vertical-align: center;
  text-align: left;
  background-color: #fff;
  font-size:28rpx;
  border-radius: 16rpx 16rpx 0 0;
}

.balance{
  box-sizing: border-box;
  width: 702rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content:space-between;
  /* background-color: red; */
  background-color: #fff;
  padding: 0 20rpx 30rpx 20rpx;
  border-radius: 0 0 20rpx 20rpx; 
}
.placeholder{
  color:#999
}
.balance_item{
  position:relative;
  box-sizing: border-box;
  /* background-color: red; */
  width: 308rpx;
  height: 116rpx;
  display: flex;
  justify-content:space-between;
  align-items: center;
  text-align: center;
  /* box-shadow: 0 10rpx 6rpx rgba(100,100,100,.1); */
  margin-top: 30rpx;
  /* border-radius: 20rpx; */
  flex-direction: column;
  border: 2rpx solid rgb(202,202,202);
}
.auth_box{
  position: fixed;
  bottom: 0;
  width: 750rpx;
  height: 220rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  justify-content:flex-start;
}
.auth_text{
  font-size: 20rpx;
  color: #ddd;
  padding: 16rpx 0 20rpx 42rpx;
}

.auto_button_box{
    height: 80rpx;
    line-height: 80rpx;
}

.auth_button{
  height: 80rpx;
  line-height: 80rpx;
  width: 672rpx;
  border-radius: 0;
  font-size: 36rpx;
}

