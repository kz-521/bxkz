.main{
  box-sizing: border-box;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  align-content: center;
  padding: 40rpx 24rpx 0 24rpx;
}
.yes_sign{
  /* width: 44rpx; */
  /* height: 44rpx; */
  position:absolute;
  top: 0;
  right: 0;
  /* background-color: pink; */
  border:11px solid #000;
   border-color:#3fd572 #3fd572 transparent transparent;
    border-style:solid solid dashed dashed;
}
.done{
  position:absolute;
  top: -9px;
  right: 0;
}

.money label {
  display: flex;
  flex-direction: row;
  align-items: center;
  background-color: #fff;
  margin: 16rpx 20rpx;
  box-shadow: 0 0 5rpx rgba(0,0,0,.3);
  padding: 25rpx 30rpx
}

.money radio{
  display: flex;
}

